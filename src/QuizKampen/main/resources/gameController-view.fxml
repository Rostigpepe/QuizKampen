<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="335.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gameControllers.GameController">
    <ImageView fitHeight="600.0" fitWidth="468.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="0.0"
               AnchorPane.topAnchor="0.0">
        <Image url="@quizkampenbakgrund.jpg"/>
    </ImageView>
    <VBox fx:id="background" alignment="CENTER" fillWidth="false" maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="335.0" spacing="30.0"
          style="-fx-background-image: url(quizkampenbakgrund.jpg)" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0">
        <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
        </padding>
        <ImageView fitHeight="43.0" fitWidth="252.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@nya_quizkampen.jpg"/>
        </ImageView>
        <StackPane alignment="TOP_CENTER" prefHeight="180.0" prefWidth="260.0">
            <Label fx:id="questionArea" alignment="CENTER" contentDisplay="CENTER"
                   prefHeight="180.0" prefWidth="275.0"
                   style="-fx-border-color: black; -fx-border-width: 1; -fx-border-style: solid;
                    -fx-background-color: white; -fx-border-radius: 10 10 10 10; -fx-background-radius: 10 10  10 10;"
                   textAlignment="CENTER" wrapText="true">
                <font>
                    <Font name="Arial" size="13.0"/>
                </font>
            </Label>
            <Label fx:id="genreField" alignment="CENTER" prefHeight="26.0" prefWidth="147.0"
                   style="-fx-background-radius: 0 0 10 10; -fx-border-radius: 0 0 10 10; -fx-background-color: #467ae1;"
                   textFill="WHITE">
                <font>
                    <Font name="Avenir Next Bold" size="12.0"/>
                </font>
            </Label>
        </StackPane>
        <GridPane fx:id="buttonPanel" alignment="BOTTOM_CENTER" prefHeight="145.0" prefWidth="255.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="90.0" minHeight="10.0" prefHeight="72.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="101.0" minHeight="10.0" prefHeight="75.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Button fx:id="buttonA" alignment="CENTER" contentDisplay="CENTER" focusTraversable="false"
                    mnemonicParsing="false" onAction="#actionPerformed" prefHeight="64.0" prefWidth="121.0"
                    style="-fx-background-color: #23427F;" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                <effect>
                    <DropShadow/>
                </effect>
                <font>
                    <Font name="Avenir Next Bold" size="12.0"/>
                </font>
            </Button>
            <Button fx:id="buttonB" alignment="CENTER" contentDisplay="CENTER" focusTraversable="false"
                    mnemonicParsing="false" onAction="#actionPerformed" prefHeight="64.0" prefWidth="121.0"
                    style="-fx-background-color: #23427F;" textAlignment="CENTER" textFill="WHITE" wrapText="true"
                    GridPane.columnIndex="1">
                <effect>
                    <DropShadow/>
                </effect>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <font>
                    <Font name="Avenir Next Bold" size="12.0"/>
                </font>
            </Button>
            <Button fx:id="buttonC" alignment="CENTER" contentDisplay="CENTER" focusTraversable="false"
                    mnemonicParsing="false" onAction="#actionPerformed" prefHeight="64.0" prefWidth="121.0"
                    style="-fx-background-color: #23427F;" textAlignment="CENTER" textFill="WHITE" wrapText="true"
                    GridPane.rowIndex="1">
                <effect>
                    <DropShadow/>
                </effect>
                <font>
                    <Font name="Avenir Next Bold" size="12.0"/>
                </font>
            </Button>
            <Button fx:id="buttonD" alignment="CENTER" contentDisplay="CENTER" focusTraversable="false"
                    mnemonicParsing="false" onAction="#actionPerformed" prefHeight="64.0" prefWidth="121.0"
                    style="-fx-background-color: #23427F;" textAlignment="CENTER" textFill="WHITE" wrapText="true"
                    GridPane.columnIndex="1" GridPane.rowIndex="1">
                <effect>
                    <DropShadow/>
                </effect>
                <font>
                    <Font name="Avenir Next Bold" size="12.0"/>
                </font>
            </Button>
        </GridPane>
        <Label fx:id="timeLeft" prefHeight="43.0" prefWidth="52.0"/>
    </VBox>
</AnchorPane>
